<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ving.kvxroid">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".Common.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Topic.TopicTypeActivity"></activity>
        <activity android:name=".Topic.AddServerActivity" />
        <activity android:name=".ItemList.Detail.ItemImageActivity"></activity>
        <activity android:name=".ItemList.Detail.ItemNameActivity" />
        <activity android:name=".TopicDetailActivity.TopicDetailActivity" />
        <activity android:name=".Selection.ServerSelectionActivity" />
        <activity
            android:name=".Topic.AddTopicActivity"
            android:windowSoftInputMode="adjustUnspecified" />
        <activity android:name=".Detail.ItemDetailActivity" />
        <activity android:name=".ItemList.Detail.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="org.eclipse.paho.android.service.MqttService" />
    </application>

</manifest>